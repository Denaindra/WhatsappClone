<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUIMobileStarterKit.Screens.ForgotPasswordPage"
             BackgroundColor="WhiteSmoke"
             Title="Forgot Password">
    <StackLayout Padding="10,50,10,0" Spacing="20">
        <Label  TextColor="Black" FontAttributes="Bold"
            Text="Please Enter your email address, will send the pasword reset link into your mail box"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Entry Placeholder="Email" Keyboard="Email" TextColor="Black" />

        <Frame  BackgroundColor="#128c7e" Padding="10" HeightRequest="50" HorizontalOptions="Center" BorderColor="WhiteSmoke">
            <Label Text="Send link" TextDecorations="Underline" TextColor="White" FontSize="16"/>
        </Frame>
     
    </StackLayout>
</ContentPage>